<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magenest_ZohocrmIntegration::zohocrm" title="ZohoCRM Integration" sortOrder="100">
                    <resource id="Magenest_ZohocrmIntegration::mapping" title="Field Mapping"  sortOrder="10" />
